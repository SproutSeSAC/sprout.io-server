{{>layout/header}}
    <title>가게 정보</title>
    <script src="/script/infoConfig.js"></script>
</head>
<body>
{{>layout/navi}}
<div class="garden_container">
    <button onclick="backButton()">Back</button>

    {{#storeImage}}
        <div>
            <img src="{{path}}" style="width:30vh;">
        </div>
    {{/storeImage}}


    {{#storeData}}
        <h3>{{name}}</h3>
        <div style="margin-bottom:5vh;">
            <span>{{style}}</span>
            <!--        <span>{{location}}</span> <a href="https://map.naver.com/p/entry/place/{{attr}}">네이버 지도</a>-->
            <span>{{location}}</span><img src="/img/naverMap.png" style="width:5vh;"><a href="nmap://route/walk?slat=37.6043803&slng=127.0366509&sname=청년취업사관학교_성북캠퍼스&dlng={{lon}}&dlat={{lat}}&dname={{name}}&zoom=16">네이버 길찾기</a>
        </div>
    {{/storeData}}

    {{#storeTimeData}}
        <div>
            <span>{{DoW}}</span>
            <span>영업 시간: {{startTime}} ~ {{endTime}}</span>
            <span>쉬는 시간: {{breakStart}} ~ {{breakEnd}}</span>
        </div>
    {{/storeTimeData}}

    <table>
        {{#menuData}}
            <tr>
                <td>{{name}}</td>
                <td>{{price}}</td>
            </tr>
        {{/menuData}}
    </table>

    <div>
        <span>오늘 생성된 Group: {{groupCnt}}개</span>
    </div>
    <table>
        {{#groupingList}}
            <tr>
                <td><a href="http://localhost:12571/grouping/detail/{{id}}">{{title}}</a></td>
                <td>{{account.username}}</td>
                <td>{{formattedDate}}</td>
            </tr>
        {{/groupingList}}
    </table>
    <p>일자: {{today}}</p>
</div>
{{>layout/footer}}
</body>
</html>